@model Web.Models.ReservaUpdateModel

@{
    ViewData["Title"] = "Edição";
}

<h1>Editar</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeLocador" class="control-label">Nome do locador</label>
                <input asp-for="NomeLocador" class="form-control" />
                <span asp-validation-for="NomeLocador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDevolucao" class="control-label">Data de devolução</label>
                <input asp-for="DataDevolucao" class="form-control" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeLivro" class="control-label">Nome do livro</label>
                <select asp-for="NomeLivro" class="form-control" asp-items="ViewBag.Nome"></select>
                <span asp-validation-for="NomeLivro" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
